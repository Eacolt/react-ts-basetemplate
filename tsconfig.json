{
	"compilerOptions": {
	  "outDir": "./dist/",
	  "sourceMap": false,
	  "noImplicitAny": true,
	  "experimentalDecorators": true,
      "noEmitHelpers": false,
	  "module": "commonjs",
	  "target": "es5",
	  "jsx": "react",
	  "baseUrl":".",
	  "paths": {
	  "@/*": [
		  "src/*"
	  ]
	  },
	  "lib": [
        "es5",
        "es6",
        "dom",
        "es2015",
        "es2015.promise",
        "es2015.core",
        "es2016",
        "es2017",
        "es2018",
        "esnext"
      ]
	},
	"include": [
	  "./src/**/*"
	],
	"exclude": ["node_modules"]
  }